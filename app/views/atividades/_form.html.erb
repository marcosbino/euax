<%= form_with(model: atividade, local: true) do |form| %>
  <% if atividade.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(atividade.errors.count, "error") %> prohibited this atividade from being saved:</h2>

      <ul>
      <% atividade.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <%= form.label :nome, class: "input-group-text" %>
      </div>
      <%= form.text_field :nome, id: :atividade_nome, class: "form-control" %>
    </div>
    
  </div>

  <div class="field">
    <%= form.label :dataIni %>
    <%= form.datetime_select :dataIni, id: :atividade_dataIni %>
  </div>

  <div class="field">
    <%= form.label :dataFim %>
    <%= form.datetime_select :dataFim, id: :atividade_dataFim %>
  </div>

  <div class="field">
    <%= form.label :finalizada %>
    <%= form.check_box :finalizada, id: :atividade_finalizada %>
  </div>

  <div class="field">
    <div class="input-group mb-3">
      <div class="input-group-prepend">
        <%= form.label :projeto_id, class: "input-group-text" %>
      </div>
      <%= form.text_field :projeto_id, id: :atividade_projeto_id %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit 'Enviar', class: 'btn btn-small btn-success' %>
    <%= link_to 'Voltar', atividades_path, class: 'btn btn-small btn-primary' %>
  </div>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Atividades</h1>

<table class="table table-hover table-sm">
  <thead class="thead-dark">
    <tr>
      <th>Nome</th>
      <th>Data de início</th>
      <th>Data final</th>
      <th>Finalizada</th>
      <th>Projeto</th>
      <th colspan="3" class="text-center">Ações</th>
    </tr>
  </thead>

  <tbody>
    <% @atividades.each do |atividade| %>
      <tr>
        <td><%= atividade.nome %></td>
        <td><%= atividade.dataIni.strftime("%d/%m/%Y - %H:%M") %></td>
        <td><%= atividade.dataFim.strftime("%d/%m/%Y - %H:%M") %></td>
        <td><%= (atividade.finalizada)? "sim" : "não" %></td>
        <td><%= atividade.projeto.nome %></td>
        <td><%= link_to 'Ver', atividade, class: 'btn btn-small btn-primary' %></td>
        <td><%= link_to 'Editar', edit_atividade_path(atividade), class: 'btn btn-small btn-primary' %></td>
        <td><%= link_to 'Deletar', atividade, method: :delete, data: { confirm: 'Tem certeza que deseja deletar?'}, class: 'btn btn-small btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nova atividade', new_atividade_path, class: 'btn btn-small btn-success' %>
<%= link_to 'Projetos', projetos_path, class: 'btn btn-small btn-primary' %>